<h1>Sign Up Confirmation</h1>

<div class="row">
  <div class="col-md-8">
    <h2>Are you sure these values are correct?</h2>
    <br>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">Email: <%= @user.email %></h4>
          <h4 class="media-heading">Name: <%= @user.name %></h4>
        </div>
      </div>
  </div>
</div>
<br>
<div>
<%= button_to "Yes", {controller: "users", action: "create", params: params}, class: "btn btn-success pull-left" %>
<%= link_to "No", new_user_path, class: "btn btn-danger" %>
